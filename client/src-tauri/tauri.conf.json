{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Sistema RH",
  "version": "0.1.0",
  "identifier": "com.suaempresa.sistemarh",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Sistema RH",
        "width": 1100,
        "height": 740,
        "resizable": true
      }
    ],
    "security": {
      "csp": "default-src 'self' tauri: 'unsafe-inline' 'unsafe-eval'; img-src 'self' data: filesystem:; connect-src 'self' http://localhost:3030;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
